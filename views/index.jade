  div(id="menu")
    h1= title
    p
      |Navigation: arrows
      br
      |Author: Jeremy
      br
      |University Of Macau
      br
      |cjuhong@gmail.com
    button(id="enter_button") Enter
  div#size
    |row:
    br
    input(id='row', type="number", name='row', max="10", min="1")
    br
    |column:
    br
    input(id='column', type='number', name='column', max="10", min="1")
    br
    button(id='ok') OK
  div#exhibitor_login
    |name:
    br
    input(id='ex_name', type="text", name='ex_name')
    br
    |password:
    br
    input(id='ex_pwd', type='password', name='ex_pwd')
    br
    button(id='ex_login') LOGIN
  div#admin_login
    |name:
    br
    input(id='ad_name', type="text", name='ad_name')
    br
    |password:
    br
    input(id='ad_pwd', type='password', name='ad_pwd')
    br
    button(id='ad_login') LOGIN
  div#model
    |model:
    br
    input(id='obj', type="file", name='row', max="10", min="1")
    br
    |texture:
    br
    input(id='img', type='file', name='column', max="10", min="1")
    br
    button(id='load') LOAD
  div#points 0
  div#model_choice
    button(id="admin_button") ADMIN
    button(id="exhibitor_button") EXHIBITOR
    button(id="visitor_button") VISITOR
  div#operation
    button(id="booth_button", class="admin") BOOTH
    button(id="model_button", class="admin exhibitor") MODEL
  script.
    Cufon.replace('#menu h1');
    Cufon.replace('#points');