extends layout
block content 
  script(src='/javascripts/three.min.js')
  script(src='/javascripts/FirstPersonControls.js')
  script(src='/javascripts/OBJLoader.js')
  script(src='/javascripts/jquery-1.8.3.min.js')
  script(src='/javascripts/dat.gui.min.js')
  script(src='/javascripts/ve.js')
  script(src='/javascripts/ve.utils.js')
  script(src='/javascripts/ve.hall.js')
  script(src='/javascripts/ve.booth.js')
  script(src='/javascripts/ve.model.loader.js')
  script(src='/javascripts/stats.min.js')
  script(src='/javascripts/cufon-yui.js')
